<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
       http://camel.apache.org/schema/blueprint http://camel.apache.org/schema/blueprint/camel-blueprint.xsd">

  <bean id="helloBean" class="org.camel.transformation.bean.HelloBean" />

  <camelContext xmlns="http://camel.apache.org/schema/blueprint">
  <route id="timerToLog">
    <from uri="quartz://camelTransform/myTimer?cron=0+32+16+*+*+?"/>
    <log message="Quartz Trigger to Running Process...."/>
    <pollEnrich uri="file:D:\\upload\\camel\\in?fileName=test.txt&amp;noop=true"/>
    <log message="Processing..."/>
    <bean ref="helloBean"/>
    <log message="Proceed"/>
    <to uri="file:D:\\upload\\camel\\out?fileName=outputBean.txt"/>
  </route>
</camelContext>

</blueprint>
